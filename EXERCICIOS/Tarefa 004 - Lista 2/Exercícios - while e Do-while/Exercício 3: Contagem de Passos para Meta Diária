#include <stdio.h>

int main() { int meta_diaria = 10000;

int total_passos = 0;

int passos_atualizados;

while (total_passos < meta_diaria) { printf("Digite o número de passos dados: "); scanf("%d", &passos_atualizados); total_passos += passos_atualizados;

printf("Total de passos até o momento: %d\n", total_passos); // Exibe o total de passos if (total_passos >= meta_diaria) { printf("Parabéns! Você alcançou a meta de 10.000 passos.\n"); break; } } return 0;

}
