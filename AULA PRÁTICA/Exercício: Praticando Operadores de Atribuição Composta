#include <stdio.h>

int main() {
    // Declaração das variáveis
    float a;
    int b;

    // Solicita o valor inicial para a e b ao usuário
    printf("Informe o valor de a: ");
    scanf("%f", &a);
    printf("Informe o valor de b: ");
    scanf("%d", &b);

    // 3.1 Subtrai o valor de b de a
    a -= b;
    printf("a = %.1f\n", a);

    // 3.2 Multiplica o valor de a por 4
    a *= 4;
    printf("a = %.1f\n", a);

    // 3.3 Divide o valor de a por 3
    a /= 3;
    printf("a = %.1f\n", a);

    // 3.4 Adiciona 2 ao valor de a
    a += 2;
    printf("a = %.1f\n", a);

    // 3.5 Encontra o resto da divisão de b por 5
    b %= 5;
    printf("b = %d\n", b);

    return 0;
}
